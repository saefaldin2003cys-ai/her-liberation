# ==========================================
# HerLiberation Environment Variables
# ==========================================
# Copy this file to .env and fill in your values

# MongoDB Connection String
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/herliberation?retryWrites=true&w=majority

# Server Port (optional, defaults to 5500)
PORT=5500

# Environment (development or production)
NODE_ENV=development

# ==========================================
# Security Notes:
# ==========================================
# 1. Never commit .env file to git
# 2. Use strong MongoDB password
# 3. Set NODE_ENV=production on Render
# 4. Rotate credentials regularly
